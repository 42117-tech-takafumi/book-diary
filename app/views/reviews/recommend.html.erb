<% if @genre_books.present? %>
<div class = "recommend_title">ジャンル：<%= @book_genre_name %>　のお薦め本</div>
  <%= render partial: "shared/recommend_book", locals: { books: @genre_books } %>
<% end %>

<% if @author_books.present? %>
<div class = "recommend_title">著者：<%= @most_frequent_author %>　のお薦め本</div>
  <%= render partial: "shared/recommend_book", locals: { books: @author_books } %>
<% end %>

<% if @ai_books.present? %>
<div class = "recommend_title">AIがお薦めする本</div>
  <%= render partial: "shared/recommend_book", locals: { books: @ai_books } %>
<% end %>

<div class = "recommend_page_back">
    <%= link_to "マイページへ戻る", user_path(current_user.id) %>
    <%= link_to "検索画面へ戻る", root_path %>
</div>