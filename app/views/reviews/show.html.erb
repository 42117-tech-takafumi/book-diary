<div class = "review_box" >
  
  <%= render 'shared/review_book', model: @review %>

  <div class = "review_items">    
    <div class = "review_item" >
      <div>〇あなたが思ったジャンル1</div>
      <%= @review.tag1.name %>
    </div>
    <div class = "review_item">
      <div>〇あなたが思ったジャンル2</div>
      <%= @review.tag2.name %>
    </div>
    
    <div class = "review_item">
      <div>〇あらすじ</div>
      <%= @review.item_caption %>
    </div>
    <div class = "review_item">
      <div>〇感想</div>
      <%= @review.comment %>
    </div>

  <div class = "show_page_back" >
    <%= form_with url: user_path(current_user.id), method: :get do |f| %>
      <%= f.submit "戻る" %>
    <% end %>
  </div>
</div>