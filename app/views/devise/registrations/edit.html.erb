<%= form_with(model: resource, url: registration_path(resource_name), method: :put, html: { class: 'registration-main' }) do |f| %>
<div class='form-wrap'>
  <div class="form-header">
    <h1 class="form-header-text">
      ユーザー情報の変更
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) yamada", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>現在確認待ちのメールアドレス: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">
        <%= f.label :password, '新しいパスワード（変更しない場合は空欄のまま）' %>
      </label>
    </div>
    <%= f.password_field :password, autocomplete: "new-password" ,placeholder:"6文字以上の半角英数字"%>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">
        <%= f.label :password_confirmation, '新しいパスワード（確認）' %>
      </label>
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"6文字以上の半角英数字"%>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">
        <%= f.label :current_password, '現在のパスワード（変更の確認に必要です）' %>
      </label>
    </div>
    <%= f.password_field :current_password, autocomplete: "current-password" ,placeholder:"6文字以上の半角英数字"%>
  </div>

  <div class='register-btn'>
    <%= f.submit "更新する" ,class:"register-red-btn"%>
  </div>

<% end %>

</div>